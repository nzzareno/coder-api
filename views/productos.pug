doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title MVC PUG Products
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css"
    integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor"
    crossorigin="anonymous")
    script.
     if(window.history.replaceState){ 
     window.history.replaceState(null, null, window.location.href)}

  body(class="container form-control-plaintext")
   div(class="container")
    div(class="row")
     div(class="col-12")
   if productos.length > 0
    
    h1(style="margin-top: 10px; margin-bottom: 21px;text-align:center;") LIST OF PRODUCTS ADDED
    table(class="table")
     thead(class="table-dark")
      tr
       th(class="text-center" scope="col") #
       th(class="text-center" scope="col") Product
       th(class="text-center" scope="col") Price
       th(class="text-center" scope="col") Preview
     tbody
     each producto in productos
      - let imgx = producto.thumbnail
        tr(class="text-center")
         th(scope="row") #{producto.id}
          td
           h5 #{producto.title}
          td
           h5 #{producto.price}
          td 
           img(src=imgx alt="thumbnail8" style="width: 50%; height: 200px; margin-left: 21px;")
   else
       tr
        td(colspan="4")
         h1(style="color: red; font-weight: 700; text-align:center;") No matching products found
   button(onclick="window.location.href='/'" class="bg-dark" style="outline: none; height: 70px; position: fixed; bottom: 0; left: 0; font-weight: bold; font-size: 26px; border: none; color: rgb(255, 255, 255);") ‚Üê Go back to home 
   script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js")


